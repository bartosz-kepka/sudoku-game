<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="New game">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Label text="Choose difficulty level"/>
        <Button fx:id="easyButton" minWidth="100.0"
                text="Easy"
                textAlignment="CENTER"/>
        <Button fx:id="mediumButton" minWidth="100.0"
                text="Medium"
                textAlignment="CENTER"/>
        <Button fx:id="hardButton" minWidth="100.0"
                text="Hard"
                textAlignment="CENTER"/>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
</VBox>
